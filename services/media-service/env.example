# Configuración de procesamiento de imágenes
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080
IMAGE_QUALITY=85

# Configuración de seguridad
ALLOWED_ORIGINS=*

# Configuración de logging
LOG_LEVEL=INFO 