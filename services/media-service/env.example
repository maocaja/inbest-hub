# Configuración del servidor
HOST=0.0.0.0
PORT=8005
DEBUG=True

# Configuración de la base de datos
DATABASE_URL=sqlite:///./media_service.db

# Configuración de almacenamiento
UPLOAD_DIR=./uploads
